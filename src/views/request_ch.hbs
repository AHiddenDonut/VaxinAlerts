    <div class="container border p-3 shadow-lg rounded-lg container-wrapper">
        <h2 class="text-center">Register a new channel</h2>
        <div class="container card-wrapper">
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="card-header bg-primary text-white"><i class="fa fa-envelope"></i> Details
                        </div>
                        <div class="card-body">
                            <form>
                                <div class="form-group">
                                    <label for="name">District Name</label>
                                    <input type="text" class="form-control" id="name" aria-describedby="emailHelp" placeholder="{{data}}" disabled>
                                    {{!-- <input type="text" class="form-control" id="name" aria-describedby="emailHelp" placeholder="Enter name" required> --}}
                                </div>
                                <div class="form-group">
                                    <label for="email">Telegram Username</label>
                                    <input type="email" class="form-control" id="username" aria-describedby="emailHelp" placeholder="Enter your telegram name [Optional]">
                                    <small id="emailHelp" class="form-text text-muted">This will be used to invite you via your username to the group <em>[Optional]</em></small>
                                </div>
                                <div class="form-group">
                                    <label for="email">Email address</label>
                                    <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email [Optional]">
                                    <small id="emailHelp" class="form-text text-muted">This will be used to invite you via your email to the group. We will never share it. <em>[Optional]</em></small>
                                </div>
                                <div class="mx-auto">
                                <button class="btn btn-primary text-right" type="button" onclick="send_channel_request()">Submit</button></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

